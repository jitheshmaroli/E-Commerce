   <section class="content">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/categoryList">CATEGORY LIST</a></li>
        <li class="breadcrumb-item active" aria-current="page">EDIT CATEGORY</li>
      </ol>
    </nav>
    <% if (message) { %>
      <h4><%= message %></h4>
    <% } %>
    <div class="container">
        <% if (categoryList) { %>
      <div class="row">
        <div class="col-md-7">
          <form method="POST" id="categoryForm" action="/admin/categoryList/edit/<%= categoryList._id %>" onsubmit="return validateForm()">
            <div class="form-group">
              <label for="CategoryName">Category Name</label>
              <input type="text" class="form-control" id="categoryName" value="<%= categoryList.categoryName %>"  name="categoryName" maxlength="20">
              <span id="categoryNameError" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label for="description">Category description</label>
              <input type="text" class="form-control" id="description" value="<%= categoryList.description %>" name="description" maxlength="100">
              <span id="descriptionError" class="text-danger"></span>
            </div>           
            <div class="row">
              <button type="submit" id="submitButton" class="btn btn-primary mr-1 ">UPDATE CATEGORY</button>
              <button type="button" class="btn btn-primary" onclick="clearFields()">CLEAR FIELDS</button>
              <a href="" class="ml-auto">BACK</a>
            </div>
          </form> 
        </div>
      </div>
      <% }else{ %>
        <h4>Invalid Category</h4>
        <% } %>
    </div>
   </section>     
   </main> 
