<body>
  <%- include('../includes/userHeader.ejs') %>
<h1 style="text-align: center;">WISHLIST ITEMS</h1>
<div class="container">
    <% if (wishlist && wishlist.length > 0) { %>
    <% wishlist.forEach(item => { %>
    <div class="wishlist">
      <div class="product-container">
        <div class="image-container">
            <a href="/product-details/<%= item._id %>"><img src="/uploads/<%= item.photos[0].filename  %>" alt="Product Image" ></a>
        </div>
        <div class="product-details">
            <h1 class="name"><%= item.name %></h1>
            <p>₹<%= item.price.toFixed(2) %></p>
        </div>
      </div>
        <div class="button-container">
            <form action="/move-to-cart/<%= item._id %>" method="POST" style="display: inline;">
                <input type="hidden" name="productId" value="<%= item._id %>">
                <button type="submit">ADD TO CART</button>
            </form>
            <form action="/wishlist/remove/<%= item._id %>" method="POST" style="display: inline;">
                <button type="submit">DELETE</button>
            </form>
        </div>
    </div>
    <% }) %>
    <% }else { %>
        <h2>NO ITEMS IN WISHLIST</h2>
    <% } %>
</div>
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h3 class="footer-heading">About Us</h3>
